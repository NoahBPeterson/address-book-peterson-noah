<h1>Add new Address</h1>

* Required<br><br>

<%= form_for @address do |f|%>
    <%= f.label :street%>*
    <%= f.text_field :street%><br>
    <%= f.label :town%>*
    <%= f.text_field :town%><br>
    <%= f.label :zip_code%>*
    <%= f.text_field :zip_code%><br>
    <%= f.label :state%>
    <%= f.text_field :state%><br>
    <%= f.label :country%>
    <%= f.select :country, options_for_select([["USA"], ["UK"], ["France"]])%><br><br>
    <%= f.hidden_field :person_id, value: params[:person_id] %>
    <%= f.submit%>
<%end%>