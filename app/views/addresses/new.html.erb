<h1>Add new Address</h1>

<%= form_for @address do |f|%>
    <%= f.label :street%>
    <%= f.text_field :street%>
    <%= f.label :town%>
    <%= f.text_field :town%>
    <%= f.label :zip_code%>
    <%= f.text_field :zip_code%>
    <%= f.label :state%>
    <%= f.text_field :state%>
    <%= f.label :country%>
    <%= f.select :country, options_for_select([["USA"], ["UK"], ["France"]])%>
    <%= f.hidden_field :person_id, value: params[:person_id] %>
    <%= f.submit%>
<%end%>