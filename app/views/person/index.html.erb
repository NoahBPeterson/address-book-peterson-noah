<h1>Address Book</h1>

<%= button_to "Add New Person", new_person_path, method: :get %>
<ul class="list-group w-auto">
    <% @people.each do |person| %>
        <p class="mb-0 w-100 justify-content-between list-group-item list-group-item-action gap-3 py-3">
            <%= link_to person.salutation+" "+person.first_name+" "+person.last_name, person_path(person)%>
        </p>
    <% end %>
</ul>
<br><br>
<div>
    <%= form_tag '/logout' do %>
        <%= submit_tag "Log Out" %>
    <% end %>
</div>
